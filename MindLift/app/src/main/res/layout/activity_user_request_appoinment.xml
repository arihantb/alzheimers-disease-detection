<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_request_appoinment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="An apple a Day keeps the  doctor away! "
            android:textAlignment="center"
            android:textColor="#F20F5E"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/d_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/d_address_txt"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:maxLines="4"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/d_clinic_txt"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:maxLines="4"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/request_appointment_btn"
            android:layout_width="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="58dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/user_requset_appointment" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>