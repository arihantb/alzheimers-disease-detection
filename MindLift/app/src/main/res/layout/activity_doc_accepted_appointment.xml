<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    tools:context=".doc_accepted_appointment">

    <LinearLayout
        android:id="@+id/doc_top_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/doc_top_pane"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/arrow_back" />

        <TextView
            android:id="@+id/text"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="95dp"
            android:text="@string/app_name"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_top_layout"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Accepted Appointment Requests"
        android:textColor="#A3000000"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_request"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="660dp"
            android:orientation="vertical">


            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="644dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:scrollbars="none"
                android:layout_weight="1"
                android:divider="@null"/>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>