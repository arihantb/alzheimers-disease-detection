<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MOCA_2">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/write_names_of_following_animals"
        android:textColor="#0F0F0F"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/lion_pic"
            android:layout_width="216dp"
            android:layout_height="130dp"
            app:srcCompat="@mipmap/lion_pic" />
        <EditText
            android:id="@+id/text1"
            android:layout_width="145dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/camel_pic"
            android:layout_width="216dp"
            android:layout_height="130dp"
            app:srcCompat="@mipmap/camel_pic" />

        <EditText
            android:id="@+id/text2"
            android:layout_width="145dp"
            android:layout_height="48dp"
            android:ems="10"
            android:layout_gravity="center_vertical"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/rino_pic"
            android:layout_width="196dp"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@mipmap/rino_pic" />

        <EditText
            android:id="@+id/text3"
            android:layout_width="145dp"
            android:layout_height="48dp"
            android:ems="10"
            android:layout_gravity="center_vertical"
            android:inputType="textPersonName" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="223dp"
        android:layout_marginTop="166dp"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/next_button"
        android:foreground="?attr/selectableItemBackground" />

</LinearLayout>